# status viewからcommitするときにdiffを表示する
bind status C !git commit -v

# merge commitでもdiffを表示する
set diff-options = -m --first-parent

# main-view
set main-view = line-number:no,interval=5 id:no date:local author:abbreviated \
  commit-title:graph=yes,refs=yes

# cursor行の色 文字orange 背景solarized#base02
color cursor color009 color000
# tab-size
set tab-size = 2


# background viewのタイトルバーの背景はsolarized#base01
color title-blur color008 color010
# current viewのタイトルバーの背景は青
color title-focus color008 blue
