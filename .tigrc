# status viewからcommitするときにdiffを表示する
bind status C !git commit -v

# merge commitでもdiffを表示する
set diff-options = -m --first-parent

# main-view
set main-view = line-number:no,interval=5 id:no date:local author:abbreviated \
  commit-title:graph=yes,refs=yes

# cursor行の色 文字orange 背景solarize#base02を一つだけ明るく
color cursor color166 color236

# current viewのタイトルバーの文字色を黒にする
color title-focus black blue
